{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "CallMyTrade" : {
    "Enabled": true,
    "VoIpProvider": "Twilio",
    "VoIpProvidersOptions": {
      "Twilio" : {
        "TwilioAccountSid": "1234",
        "TwilioAuthToken" : "ghrghtg",
        "ToPhoneNumber": "+14155551212",
        "FromPhoneNumber": "+15017122661"
      }
    }
  },
  "AWS": {
    "Region": "us-west-2"
  },
  "Serilog":{
    "Using":[
      //"Serilog.Sinks.AwsCloudWatch",
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "WriteTo":[
      {
        "Name": "Console"
      },
      {
        "Name":"AmazonCloudWatch",
        "Args":{
          "logGroup": "callmytrade",
          "logStreamPrefix": "environment/component"
        }
      }
    ]
  }
}
